# Environment
ENVIRONMENT=development

# Database settings
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/importcsv

# Security settings
SECRET_KEY=your-secret-key-at-least-32-characters-long

# Webhook settings (for import callbacks)
WEBHOOK_SECRET=your-webhook-secret

# Redis and RQ settings
REDIS_URL=redis://localhost:6379
RQ_DEFAULT_TIMEOUT=3600
RQ_IMPORT_QUEUE=imports

# LLM Configuration (Optional - for enhanced column mapping)
# Currently using OpenAI via LiteLLM, but can easily switch providers
OPENAI_API_KEY=sk-xxxxx  # Get from https://platform.openai.com/api-keys

# NextAuth authentication (deprecated - use backend OAuth)
NEXTAUTH_SECRET=your-nextauth-secret-at-least-32-characters  # Generate with: openssl rand -base64 32

# Frontend URL (for OAuth redirects)
FRONTEND_URL=http://localhost:3000

# OAuth Providers (optional - leave empty to disable)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Cloud Mode (set to 'true' for ImportCSV Cloud)
IMPORTCSV_CLOUD=false

# Stripe Configuration (required if IMPORTCSV_CLOUD=true)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_ID_PRO=price_...
STRIPE_PRICE_ID_BUSINESS=price_...

# Resend Email Configuration (required if IMPORTCSV_CLOUD=true)
RESEND_API_KEY=re_...
RESEND_FROM_EMAIL=noreply@yourdomain.com

# Usage Limits
FREE_TIER_IMPORTS_PER_MONTH=100
PRO_TIER_IMPORTS_PER_MONTH=2000
FREE_TIER_MAX_ROWS_PER_IMPORT=10000
PRO_TIER_MAX_ROWS_PER_IMPORT=100000
BUSINESS_TIER_MAX_ROWS_PER_IMPORT=500000
PAYMENT_GRACE_PERIOD_DAYS=7
